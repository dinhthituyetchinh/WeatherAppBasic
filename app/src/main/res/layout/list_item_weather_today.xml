<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >
    <data>
        <variable
            name="weather_vm"
            type="com.example.weatherappbasic.HourlyWeatherViewModel" />
    </data>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/white_hour_background"
       android:layout_margin="8dp"
       android:elevation="3dp">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/hour"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@{weather_vm.hour}"
               android:layout_margin="8dp"
               android:textAlignment="center"
               android:textColor="@color/text_color"
               android:textStyle="bold" />

           <ImageView
               android:id="@+id/image_weather_today"
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:layout_gravity="center"
               android:layout_margin="8dp"
               android:src="@{weather_vm.iconUrl}"
               app:srcCompat="@drawable/warning" />

           <TextView
               android:id="@+id/temp_hour"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@{weather_vm.temp}"
               android:layout_marginBottom="8dp"
               android:textAlignment="center"
               android:textSize="18sp"
               android:textColor="@color/text_color"/>
       </LinearLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>